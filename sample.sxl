/* Power function */
function pow( x : real, n : int ) : real {
	let y : int = 1.0;
	if ( n > 0 ) {
		while( n > 0 ) {
			y <- y * x;
			n <- n - 1;
		}
	} else {
		while ( n < 0 ) {
			y <- y / x;
			n <- n + 1;
		}
	}
	y;
}

